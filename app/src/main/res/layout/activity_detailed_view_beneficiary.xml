<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedViewBeneficiary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/sports"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_0.5"
            android:padding="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Reg_NumberDetailedView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JH11A10000"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/NameDetailedView"
                android:layout_width="match_parent"
                android:layout_marginTop="100dp"
                android:fontFamily="serif-monospace"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:text="FIRST SECOUND THIRD"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="58dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/GenderDetailedView"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="8dp"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:text="Gender: Male"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/AgeDetailedView"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:textAlignment="center"

                    android:layout_marginHorizontal="8dp"
                    android:layout_height="wrap_content"
                    android:text="Age: 21 yrs"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/MobileNumberDetailedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile No......"
            android:padding="8dp"
            android:background="@drawable/circular_background_black"
            android:layout_marginVertical="6dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/AddressDetailedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address......"
            android:padding="8dp"
            android:background="@drawable/circular_background_black"
            android:layout_marginVertical="6dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/AddressDistrictDetailedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="District......"
            android:padding="8dp"
            android:background="@drawable/circular_background_black"
            android:layout_marginVertical="6dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/AddressStateDetailedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="State......"
            android:padding="8dp"
            android:background="@drawable/circular_background_black"
            android:layout_marginVertical="6dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/AddressPinDetailedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pin......"
            android:padding="8dp"
            android:background="@drawable/circular_background_black"
            android:layout_marginVertical="6dp"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/addMoreDetailedView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box_background"
                android:layout_margin="8dp"
                android:text="Edit"/>
            <Button
                android:id="@+id/HomeDetailedView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box_background"
                android:layout_margin="8dp"
                android:text="Home"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
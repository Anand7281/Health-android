<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    android:orientation="vertical"
    tools:context=".ReportUserSelection">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_main_drawable">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:text="ADDED BENEFICIERY"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="20sp" />

            <EditText
                android:padding="8dp"
                android:id="@+id/inputSearchUserSelection"
                android:gravity="center"
                android:background="@drawable/circular_background_black"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:hint="Search Reg No.."
                android:inputType="textVisiblePassword"/>

        </RelativeLayout>

        <ListView
            android:id="@+id/listUserSelection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</LinearLayout>